<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyVote.UI.Views.HomePagePhone"
             xmlns:views="clr-namespace:MyVote.UI.Views;assembly=MyVoteUI"
			 xmlns:controls="clr-namespace:MyVote.UI.Controls;assembly=MyVoteUI"
			 xmlns:vm="clr-namespace:MyVote.UI.ViewModels;assembly=MyVoteUI"
             xmlns:androidWidget="clr-namespace:Android.Support.Design.Widget;assembly=Xamarin.Android.Support.Design;targetPlatform=Android"
             xmlns:formsandroid="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.Platform.Android;targetPlatform=Android">
    <RelativeLayout x:Name="lytMain" Style="{StaticResource BackgroundStyle}">
        <ListView x:Name="Repeater" ItemsSource="{Binding FilteredPollSearchResults}" HasUnevenRows="true"
                        RelativeLayout.WidthConstraint=
            "{ConstraintExpression Type=RelativeToParent, 
                                Property=Width,
                                Factor=1}"
        RelativeLayout.HeightConstraint=
            "{ConstraintExpression Type=RelativeToParent,
                                Property=Height,
                                Factor=1}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation="Vertical" Spacing="10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                <StackLayout Orientation="Horizontal" Spacing="0" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding Category}" TextColor="{StaticResource AppOrange}" />
                                    <Label Text="{Binding SearchResults.Count, StringFormat=' ({0})'}" TextColor="{StaticResource AppOrange}" />
                                </StackLayout>
                                <controls:RepeaterView x:TypeArguments="vm:PollSearchResultViewModel" Spacing="2" Orientation="Vertical" ItemsSource="{Binding SearchResults}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                    <controls:RepeaterView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <ViewCell.View>
                                                    <RelativeLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                                        <Image x:Name="curImage" Aspect="AspectFill" VerticalOptions="FillAndExpand" Source="{Binding ImageLink}"
                                                                       RelativeLayout.XConstraint=
                                                                            "{ConstraintExpression Type=RelativeToParent, 
                                                                                                    Property=Width,
                                                                                                    Factor=0,
                                                                                                    Constant=0}"
                                                                         RelativeLayout.YConstraint=
                                                                             "{ConstraintExpression Type=RelativeToParent, 
                                                                                                    Property=Height,
                                                                                                    Factor=0,
                                                                                                    Constant=0}"
                                                                        RelativeLayout.WidthConstraint=
                                                                            "{ConstraintExpression Type=RelativeToParent, 
                                                                                                    Property=Width,
                                                                                                    Factor=1,
                                                                                                    Constant=0}"
                                                                        RelativeLayout.HeightConstraint=
                                                                            "{ConstraintExpression Type=RelativeToParent, 
                                                                                                    Property=Width,
                                                                                                    Factor=1,
                                                                                                    Constant=0}">
                                                            <Image.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{DynamicResource vmViewPoll}" CommandParameter="{Binding Id}" />
                                                            </Image.GestureRecognizers>
                                                        </Image>
                                                        <Label Text="{Binding Question}" HeightRequest="75" LineBreakMode="WordWrap" TextColor="White" Font="Bold" BackgroundColor="#98434342"
                                                                    RelativeLayout.WidthConstraint=
                                                                        "{ConstraintExpression Type=RelativeToParent, 
                                                                        Property=Width,
                                                                        Factor=1,
                                                                        Constant=0}"
                                                                    RelativeLayout.XConstraint=
                                                                        "{ConstraintExpression Type=RelativeToParent, 
                                                                        Property=Width,
                                                                        Factor=0,
                                                                        Constant=0}"
                                                                    RelativeLayout.YConstraint=
                                                                        "{ConstraintExpression Type=RelativeToView,
                                                                        ElementName=curImage,
                                                                        Property=Height,
                                                                        Factor=1,
                                                                        Constant=-75}" />
                                                    </RelativeLayout>
                                                </ViewCell.View>
                                            </ViewCell>
                                        </DataTemplate>
                                    </controls:RepeaterView.ItemTemplate>
                                </controls:RepeaterView>
                           </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ContentView x:Name="fabParent" HorizontalOptions="Center" VerticalOptions="EndAndExpand"
            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                    Property=Width,
                                    Factor=1,
                                    Constant=-100}"
            RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                    Property=Height,
                                    Factor=1,
                                    Constant=-100}">
            <androidWidget:FloatingActionButton Click="fab_click" x:Arguments="{x:Static formsandroid:Forms.Context}"/>
        </ContentView>
        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           BackgroundColor="#75949494"
                           Color="Black"
                           WidthRequest="50"
                           HeightRequest="50"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
                                    Property=Width,
                                    Factor=0.5,
                                    Constant=-25}"
                           RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                                    Property=Height,
                                    Factor=0.5,
                                    Constant=-25}" />
    </RelativeLayout>
</views:ContentPageBase>